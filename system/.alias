# `cat` with beautiful colors. requires Pygments installed.
#                  sudo easy_install -U Pygments

alias c='pygmentize -O style=monokai -f console256 -g'

# add dirty files to last commit
alias whoops="git commit -a --amend --no-edit"
alias gs="git status"
alias ga="git add"
alias gd="git diff"
alias gdc="git diff --cached"
alias gc="git commit -m"
alias gp="git push"
alias gco="git checkout"
alias rs="rails s"
alias rc="rails console"

#open finder to current dir
alias finder="open --reveal ."

#delete remote branch
alias git-shoot="git push origin --delete"

# "intelligently" try to redo the last command (typos, gp with no upstream, etc)
alias fuck='eval $(thefuck $(fc -ln -1)); history -r'

alias redc="redis-cli"

# go to lock screen
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"

#play starwars yo
alias starwars="telnet towel.blinkenlights.nl"

#docker-compose
alias dco="docker-compose"

# get git branch differences
alias diffbranches="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"

#Sequelize alias cuz it's annoying
alias lise="sequelize"

alias k8="kubectl"